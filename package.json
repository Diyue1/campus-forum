{
  "name": "campus-forum",
  "version": "1.0.0",
  "description": "校园论坛",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest --coverage",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:performance": "node scripts/performance-test.js",
    "test:lighthouse": "node scripts/lighthouse-test.js",
    "test:regression": "npm run test && npm run test:e2e",
    "lint": "eslint src tests --ext .vue,.js,.jsx,.cjs,.mjs,.ts,.tsx,.cts,.mts --fix",
    "lint:security": "eslint . --ext .vue,.js,.jsx,.cjs,.mjs,.ts,.tsx,.cts,.mts --config .eslintrc.security.cjs",
    "analyze": "npm run lint && npm run analyze:sonar",
    "analyze:sonar": "node scripts/sonar-scanner.js",
    "format": "prettier --write src/",
    "android:sync": "npm run build && npx cap sync android",
    "android:open": "npx cap open android",
    "android:run": "npm run build && npx cap sync android && npx cap run android"
  },
  "dependencies": {
    "@capacitor/android": "^8.0.0",
    "@capacitor/cli": "^8.0.0",
    "@capacitor/core": "^8.0.0",
    "@tresjs/cientos": "^3.9.0",
    "@tresjs/core": "^3.9.0",
    "@vicons/ionicons5": "^0.12.0",
    "@vicons/material": "^0.12.0",
    "axios": "^1.6.0",
    "bcryptjs": "^3.0.3",
    "dompurify": "^3.3.0",
    "naive-ui": "^2.38.1",
    "pinia": "^2.1.7",
    "three": "^0.160.1",
    "vfonts": "^0.0.3",
    "vue": "^3.4.0",
    "vue-router": "^4.2.5"
  },
  "devDependencies": {
    "@playwright/test": "^1.40.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "@vitejs/plugin-vue": "^6.0.3",
    "@vitest/coverage-v8": "^4.0.16",
    "@vitest/ui": "^4.0.16",
    "@vue/language-core": "^3.1.8",
    "@vue/test-utils": "^2.4.0",
    "eslint": "^8.50.0",
    "eslint-plugin-security": "^1.7.1",
    "eslint-plugin-vue": "^9.17.0",
    "happy-dom": "^20.0.11",
    "lighthouse": "^11.4.0",
    "prettier": "^3.0.0",
    "sonarqube-scanner": "^3.3.0",
    "terser": "^5.44.1",
    "typescript": "^5.2.0",
    "vite": "^7.3.0",
    "vitest": "^4.0.16",
    "vue-tsc": "^3.1.8"
  }
}
